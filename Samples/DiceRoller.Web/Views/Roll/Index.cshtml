@model DiceRoller.Web.ViewModels.DiceRollerViewModel

@{
    ViewData["Title"] = "Dice Roller";
}

<h2>Dice Roller</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DiceExpression" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DiceExpression" class="form-control" />
                <span asp-validation-for="DiceExpression" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Roll!" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
